[user]
    name = Pierre-Etienne Bougue
    email = pierre-etienne.bougue@canaltp.fr

[branch]
    sort = -committerdate

[core]
    excludesfile = ~/.gitignore
    editor = vi
    pager = delta
    fsmonitor = true  # may be commented
    untrackedCache = true  # may be commented

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true

[column]
    ui = auto

[merge]
    tool = meld
    #tool = difft
    conflictStyle = zdiff3

[alias]
    amend = commit --amend
    st = status -sb
    smu = submodule update --recursive
    chs = "!f() { git checkout $1; git submodule update --recursive}; f"
    rbs = "!f() { git rebase $@; git submodule update --recursive}; f"
    ch = checkout
    who = shortlog -sne
    oneline = log --pretty=oneline --abbrev-commit --graph
    changes = diff --name-status
    dic = diff --cached
    diffstat = diff --stat
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
    lg = !"git lg1"    #show stash by regexp on the name
    sshow = "!f() { git stash show stash^{/$*} -p; }; f"
    sapply = "!f() { git stash apply stash^{/$*}; }; f"
    up = !git pull --rebase && git submodule update --recursive
    # fetch a PR and create a new branch with it's number
    pr = "!f() { git fetch -fu ${2:-canaltp} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    pfl = push --force-with-lease
    co = checkout

[submodule]
    recurse = true

[help]
    autocorrect = prompt

[interactive]
    diffFilter = delta --color-only

[init]
    defaultBranch = main

[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true

[delta]
    features = side-by-side line-numbers decorations
    whitespace-error-style = 22 reverse
    wrap-max-lines = unlimited
    navigate = true

[delta "decorations"]
    commit-decoration-style = bold yellow box ul
    file-style = bold yellow ul
    file-decoration-style = none

[gui]
    spellingdictionary = none

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[tag]
    sort = version:refname

[push]
    default = simple
    autoSetupRemote = true
    followTags = true

[fetch]
    prune = true
    pruneTags = true
    all = true

[rebase]
    autoSquash = true
    autoStash = true
    updateRefs = true

[commit]
    verbose = true

[rerere]
    enabled = true
    autoupdate = true
